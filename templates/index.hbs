<main class="mdl-layout__content">
    <div class="mdl-layout__tab-panel is-active" id="overview">
        {{#each data.stylesheets }}
            <section class="section--stylesheet section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
                <div class="mdl-card mdl-cell mdl-cell--12-col">
                    <div class="mdl-card__supporting-text mdl-grid mdl-grid--no-spacing">
                        <h4 class="mdl-cell mdl-cell--12-col"><a href="{{ link }}">{{link}}</a></h4>
                        {{#each statistics}}
                            <div class="statistics-container" data-count="{{ percentage }}" style="background-color: {{color}}; width: {{percentage}}%">
                                <div class="section__text mdl-cell mdl-cell--10-col-desktop mdl-cell--6-col-tablet mdl-cell--3-col-phone">
                                    <h5>{{ title }}</h5> ({{percentage}}%)
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    <div class="mdl-card__actions">
                        <a href="#" class="mdl-button" data-action="view-more">View more..</a> <br />
                        <div class="selectors-container" style="display: none">
                        {{#each obsoletedselectors}}
                            <div class="selector-container" data-count="{{ count }}">
                                <div class="section__circle-container mdl-cell mdl-cell--2-col mdl-cell--1-col-phone">
                                    <div class="section__circle-container__circle mdl-color--primary">{{count}}</div>
                                </div>
                                <div class="section__text mdl-cell mdl-cell--10-col-desktop mdl-cell--6-col-tablet mdl-cell--3-col-phone">
                                    <h5>{{ selector }}</h5> position: line {{ position.line }} column {{position.column}}
                                </div>
                            </div>
                        {{/each}}
                        </div>
                    </div>
                </div>
                <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" id="btn2-{{ link }}">
                    <i class="material-icons">more_vert</i>
                </button>
                <ul class="mdl-menu mdl-js-menu mdl-menu--bottom-right" for="btn2-{{link}}">
                    <li class="mdl-menu__item" data-action="all">Show all</li>
                    <li class="mdl-menu__item" data-action="unused">Show unused</li>
                </ul>
            </section>

        {{/each }}
    </div>
</main>
